@model  IList<MWH.Models.ViewDataModel>
@{
    var error = ViewBag.Error;
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách phiếu nhập</h3>

    </div>

    <div class="card-header">
        <a href="@Url.Action("DownloadExcel", "Receipt")" class="btn btn-primary">Tải mẫu phiếu nhập</a>
        <a href="@Url.Action("ImportExcel", "Receipt")" class="btn btn-primary">Nhập phiếu</a>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
                <tr>
                    <th>Ngày nhập</th>
                    <th>Nhân viên nhập</th>
                    <th>Nhà cung cấp</th>
                    <th>Loại sản phẩm</th>
                    <th>Số lượng nhập</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>

                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @item.Date
                        </td>
                        <td>@item.Name_Employee</td>
                        <td>
                            @item.Name_Supplier
                        </td>
                        <td>
                            @item.Id_Type
                        </td>
                        <td>@item.Number_receipt</td>
                        <td>
                            <a href="@Url.Action("Update", "Receipt", new {id = item.Id_Receipt})"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="@Url.Action("Detail", "Receipt", new {id = item.Id_Receipt})"><i class="fa-solid fa-eye"></i></a>

                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>
<script>
    function showLoading() {
        document.getElementById('loading-overlay').style.display = 'block';
    }

    function hideLoading() {
        document.getElementById('loading-overlay').style.display = 'none';
    }
    showLoading()
    setTimeout(hideLoading, 1000);
</script>
<script>
    if ('@error' == "") {

    } else if ('@error' == "False") {
        swal("Thêm mới thành công!", {
            icon: "success",
        }).then(() => {
            window.location.href = "/Receipt/Index";
        });
    } else {
        swal("Có lỗi xảy ra khi thêm mới!", {
            icon: "error",
        });
    }
</script>

