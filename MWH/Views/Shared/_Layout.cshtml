<body>
    <style>
        select,input{
            max-width:none;
        }
    </style>
    <div id="loading-overlay">
        <div id="loading-spinner"></div>
    </div>

    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Home/Index" class="nav-link">Trang chủ</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <!--<ul class="navbar-nav ml-auto">-->
            <!-- Messages Dropdown Menu -->
            <!-- Notifications Dropdown Menu -->
            <!--<li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>-->
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Theme/dist/img/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="" style="font-weight:700; font-size:20px;">Huê Lợi</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @{ 
                    var lstOrg= SelectListUtilities.GetAllOrg();
                }
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <select class="form-select" id="profile" aria-label="Default select example">
                        @foreach (var item in lstOrg)
                        {
                            if (item.Value == "1000")
                            {
                                <option selected>Quản trị hệ thống</option>
                            }
                            else
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home", new {id = "Hang_Ton"})" class="nav-link active" id="Hang_Ton">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Quản lý hàng tồn
                                </p>
                            </a>
                        </li>
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview menu-close" id="DM">
                            <a href="#" class="nav-link" id="DMLink">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Danh mục
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Category/IndexWareHouse" class="nav-link" id="Kho_Hang">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Kho hàng</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Product")" class="nav-link" id="SP">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Sản phẩm</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Type")" class="nav-link" id="LSP">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Loại sản phẩm</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Employee")" class="nav-link" id="NV">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Nhân viên</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Supplier")" class="nav-link" id="NCC">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Nhà cung cấp</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Customer")" class="nav-link" id="KH">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Khách hàng</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Unit")" class="nav-link" id="DV">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đơn vị vận chuyển</p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Receipt")" class="nav-link" id="NK">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Nhập kho
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Delivery")" class="nav-link" id="XK">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Xuất kho
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview menu-close" id="BC">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Báo cáo
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="./index.html" class="nav-link" id="KK">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo cáo kiểm kê định kỳ</p>
                                    </a>
                                </li>

                                <li class="@(ViewBag.Current == "Scheduler" ? "active" : "") ">
                                    <a href="#" class="nav-link" id="BCNK">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo cáo nhập kho</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="./index.html" class="nav-link" id="BCXK">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo cáo xuất kho</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="./index.html" class="nav-link" id="BCTH">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Báo cáo tổng hợp</p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                        @Html.Partial("_LoginPartial")
                    </ul>
